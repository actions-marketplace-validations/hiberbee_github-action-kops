{
  "name": "github-action-kops",
  "version": "1.0.0",
  "private": true,
  "description": "Setup Kops and executes commands as Github Action",
  "main": "build/index.js",
  "readme": "README.md",
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/hiberbee/github-action-kops/blob/latest/LICENSE"
    }
  ],
  "engines": {
    "yarn": ">=1.20"
  },
  "scripts": {
    "compile": "tsc",
    "clean": "rimraf build",
    "lint": "eslint --fix src/**/*.ts",
    "build": "ncc build build/index.js --source-map",
    "test": "jest",
    "start": "cross-env RUNNER_TEMP=build node dist/index.js",
    "release": "yarn clean && yarn compile && yarn lint && yarn build && yarn clean"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hiberbee/github-action-kops.git"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "kubernetes",
    "github-action",
    "kops"
  ],
  "author": {
    "name": "Vlad Volkov",
    "email": "vlad@hiberbee.com",
    "url": "https://github.com/vladyslavvolkov"
  },
  "dependencies": {
    "@actions/core": "^1.2.4",
    "@actions/exec": "^1.0.4",
    "@actions/github": "^4.0.0",
    "@actions/http-client": "^1.0.8",
    "@actions/tool-cache": "^1.6.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.10",
    "@types/node": "^14.6.0",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "@zeit/ncc": "^0.22.3",
    "cross-env": "^7.0.2",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-github": "^4.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "prettier": "^2.1.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.2.0",
    "typescript": "^4.0.2"
  },
  "jest": {
    "transform": {
      "\\.ts$": [
        "ts-jest"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn release && git add ."
    }
  }
}
